                top:150pt;
                width:280pt;
                height:30pt;
                padding-left: 10pt;
            }
            #email{
                position: absolute;
                border-radius: 5pt;
                border-color: royalblue;
                border-style: solid;
                left:10pt;
                top:190pt;
                width:280pt;
                height:30pt;
                padding-left: 10pt;
            }
            #phone{
                position: absolute;
                border-radius: 5pt;
                border-color: royalblue;
                border-style: solid;
                left:10pt;
                top:230pt;
                width:280pt;
                height:30pt;
                padding-left: 10pt;
            }
            #edit{
                position: absolute;
                border-radius: 5pt;
                left:240pt;
                top:10pt;
                width:50pt;
                height:25pt;
                background-color: royalblue;
                border-color: royalblue;
                color: white;
                font-size: 12pt;
                font-weight: bold;
            }
            #logout{
                position: absolute;
                border-radius: 5pt;
                left:1080pt;
                top:8pt;
                width:60pt;
                height:25pt;
                background-color: royalblue;
                border-color: royalblue;
                color: white;
                font-size: 12pt;
                font-weight: bold;
                z-index: 10;
            }
            #top{
                position: absolute;
                border-radius: 0pt;
                background: rgba(255,255,255,0.3);
                border-style: solid;
                border-color:transparent;
                border-width: 2pt;
                border-radius: 5pt;
                top:5pt;
                width:98.5%;
                height:50pt;
                z-index: 1;
            }
            #header{
                font-size: 40pt;
                font-weight: bold;
                font-family: consolas;
            }
            #usrname{
                position: absolute;
                z-index: 4;
                left: 85%;
                top:33pt;
                font-size: 13pt;
                font-family: arial;
            }
            #nav{
                position: absolute;
                border-radius: 0pt;
                background: rgba(255,255,255,0.3);
                border-style: solid;
                border-color:transparent;
                border-width: 2pt;
                border-radius: 5pt;
                top:70pt;
                width:98.5%;
                height:20pt;
                z-index: 1;
            }
            #home{
                position: absolute;
                background: transparent;
                left: 0pt;
                border-style: none;
                height: 20pt;
                width: 150pt;
            }
            #home:hover,#prof:hover,#book:hover,#prm:hover,#mybk:hover,#pnr:hover{
                cursor: pointer;
            }
            #pnr{
                position: absolute;
                background: transparent;
                top: 0pt;
                left: 750pt;
                border-style: none;
                height: 20pt;
                width: 150pt;
            }
            #mybk{
                position: absolute;
                background: transparent;
                top: 0pt;
                left: 600pt;
                border-style: none;
                height: 20pt;
                width: 150pt;
            }
            #prof{
                position: absolute;
                background: transparent;
                background: rgba(255,255,255,0.5);
                top: 0pt;
                left: 150pt;
                border-style: none;
                height: 20pt;
                width: 150pt;
            }
            #book{
                position: absolute;
                background: transparent;
                top: 0pt;
                left: 300pt;
                border-style: none;
                height: 20pt;
                width: 150pt;
            }
            #verify {
                position: absolute;
                top: 260px;
                left: 260pt;
                height: 20pt;
                width: 20pt;
                background-size: 100%;
                z-index: 20;
                border-style: solid;
                border-color: white;
            }
        </style>
        <script src="login.js"></script>
        <script>
            function ver() {
                var usrrcd1 = "<%= usrrcd.emailVerified %>";
                console.log(usrrcd1);
                if(usrrcd1==="true"){
                    console.log("verified");
                    document.getElementById("verify").style.backgroundImage = "url('images/nithin2.png')";
                    document.getElementById("verify").title = "Email Verified Succesfully."
                    document.getElementById("verify").disabled = "true";
                }
                else {
                    console.log("not verified");
                    document.getElementById("verify").style.backgroundImage = "url('images/nithin1.jpg')";
                    document.getElementById("verify").title = "Click Here to verify your E-Mail."
                }
            }
        </script>
    </head>
    <body onload="ver()">
        <div id="top">
            <label id="header">FlyWithJoy</label>
            <label id="usrname">Hello, <%=name1%></label>
        </div>
        <div id="nav">
            <form action="nav_home" method="POST">
                <button id="home" type="submit">Home</button>
            </form>
            <form action="nav_profile" method="POST">
                <button id="prof" type="submit">Profile</button>
            </form>
            <form action="nav_booking" method="POST">
                <button id="book" type="submit">Book Your Ticket</button>
            </form>
            <form action="nav_promo" method="POST">
                <button id="prm" type="submit">Promo Codes</button>
            </form>
            <form action="nav_mybook" method="POST">
                <button id="mybk" type="submit">My Bookings</button>
            </form>
            <form action="nav_pnr" method="POST">
                <button id="pnr" type="submit">PNR Status</button>
            </form>
        </div>
        <form action="logout" method="POST">
            <button id="logout" type="submit">Logout</button>
        </form>
        <div id="div0">
            <form action="verify" method="POST">
                <button id="verify" title="Verify E-mail" type="submit"></button>
            </form>
            <img src="avatar.png" id="photo">
            <form action="edit" method="POST">
            <button id="edit" type="submit">Edit</button>
            <input id="fullname" name="fullname" value="<%=name1%>" disabled>
            <input id="email" name="email" type="email" value="<%=email1%>" disabled>
            <input id="phone" name="phone" type="text" value="<%=phone1%>" disabled>
        </form>
        </div>
    </body>
</html>