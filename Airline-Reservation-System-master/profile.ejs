                left: 400pt;
                background:rgba(255, 255, 255, 0.3)
            }
            #prm{
                position: absolute;
                background: transparent;
                top: 0pt;
                left: 450pt;
                border-style: none;
                height: 20pt;
                width: 150pt;
            }
            #photo{
                border-radius: 100pt;
                border-color: royalblue;
                border-style: solid;
                height: 100pt;
                width: 100pt;
                position: absolute;
                left: 100pt;
                top: 20pt;
            }
            #fullname{
                position: absolute;
                border-radius: 5pt;
                border-color: royalblue;
                border-style: solid;
